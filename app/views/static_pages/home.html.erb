<section class="product spad">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="trending__product">
          <div class="row">
            <div class="col-lg-8 section-title">
              <div class="tab__sidebar">
                <%= button_to t(".now_showing"), movies_path, method: :get, params: {sort: :showing}, class: 'tab__button tab__button-active', remote: true %>
                <%= button_to t(".coming_soon"), movies_path,  method: :get, params: {sort: :coming}, class: 'tab__button', remote: true %>
              </div>
            </div>
          </div>
          <div class="row tab__content" id="tab__content">
            <%= render partial: "shared/movie", collection: @movies %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

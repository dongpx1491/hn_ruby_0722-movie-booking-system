<% provide :title, t(".details") %>
<div class="breadcrumb-option">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="breadcrumb__links">
          <%= link_to root_path do %>
            <i class="fa fa-home"></i><%= t ".home" %>
          <% end %>
          <span><%= t ".movies" %></span>
        </div>
      </div>
    </div>
  </div>
</div>
<section class="anime-details spad">
  <div class="container">
    <div class="anime__details__content">
      <div class="row">
        <div class="col-lg-3">
          <% if @movie.image.attached? %>
            <div class="anime__details__pic" style="background-image: url(<%= url_for @movie.image %>);">
              <div class="comment"><i class="fa fa-comments"></i></div>
              <div class="view"><i class="fa fa-eye"></i></div>
            </div>
          <% else %>
            <div class="anime__details__pic" style="background-image: url(<%= @movie.thumbnail %>);">
              <div class="comment"><i class="fa fa-comments"></i></div>
              <div class="view"><i class="fa fa-eye"></i></div>
            </div>
          <% end %>
        </div>
        <div class="col-lg-9">
          <div class="anime__details__text">
            <div class="anime__details__title">
              <h3><%= @movie.title %></h3>
            </div>
            <div class="anime__details__rating">
              <div class="rating">
                <a href="#"><i class="fa fa-star"></i></a>
                <a href="#"><i class="fa fa-star"></i></a>
                <a href="#"><i class="fa fa-star"></i></a>
                <a href="#"><i class="fa fa-star"></i></a>
                <a href="#"><i class="fa fa-star-half-o"></i></a>
              </div>
              <span></span>
            </div>
            <p><%= @movie.description %></p>
            <div class="anime__details__widget">
              <div class="row">
                <div class="col-lg-6 col-md-6">
                  <ul>
                    <li><span><%= t ".release" %></span><%= l(@movie.release_date, format: :own) %></li>
                    <li><span><%= t ".director" %></span><%= @movie.director %></li>
                    <li><span><%= t ".cast" %></span><%= @movie.cast %></li>
                    <li><span><%= t ".status" %></span><%= @movie.status %></li>
                  </ul>
                </div>
                <div class="col-lg-6 col-md-6">
                  <ul>
                    <li><span><%= t ".language" %></span><%= @movie.language %></li>
                    <li><span><%= t ".genre" %></span><%= @movie.genre.name %></li>
                    <li><span><%= t ".duration" %></span><%= l(@movie.duration, format: :own) %></li>
                  </ul>
                </div>
              </div>
            </div>
            <div class="anime__details__btn">
              <a href="#" class="follow-btn"><i class="fa fa-heart-o"></i> <%= t ".favorite" %></a>
              <% if @movie.active? %>
                <%= link_to movie_shows_path(@movie), class: "watch-btn" do %>
                  <span><%= t ".booking" %></span> <i class="fa fa-angle-right"></i>
                <% end %>
              <% else %>
                <a class="watch-btn ban"><span><%= t ".comming" %></span> <i class="fa fa-angle-right"></i></a>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-8 col-md-8">
        <div class="anime__details__review">
          <div class="section-title">
            <h5><%= t ".reviews" %></h5>
          </div>
        </div>
        <div class="anime__details__form">
          <div class="section-title">
            <h5><%= t ".comments" %></h5>
          </div>
          <form action="#">
            <textarea placeholder="<%= t ".comments" %>"></textarea>
            <button type="submit"><i class="fa fa-location-arrow"></i> <%= t ".review" %></button>
          </form>
        </div>
      </div>
      <div class="col-lg-4 col-md-4">
        <div class="anime__details__sidebar">
          <div class="section-title">
            <h5><%= t ".might_like" %></h5>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

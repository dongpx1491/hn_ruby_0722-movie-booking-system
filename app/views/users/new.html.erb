<% provide :button_text, t(".submit") %>
<section class="normal-breadcrumb set-bg">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <div class="normal__breadcrumb__text">
          <h2><%= t ".sign_up" %></h2>
          <p><%= t ".p" %></p>
        </div>
      </div>
    </div>
  </div>
</section>
<section class="signup spad">
  <div class="container">
    <div class="row">
      <div class="col-lg-6">
        <div class="login__form">
          <h3><%= t ".sign_up" %></h3>
            <%= render "users/user_form" %>
          <h5><%= t ".have_account" %><%= link_to t(".log_in"), login_path %></h5>
        </div>
      </div>
      <div class="col-lg-6">
        <div class="login__social__links">
          <h3><%= t ".log_in_with" %></h3>
          <ul>
            <li>
              <%= link_to "#", class: "facebook" do %>
                <i class="fa-brands fa-facebook-f"></i><%= t ".facebook" %>
              <% end %>
            </li>
            <li>
              <%= link_to "#", class: "google" do %>
                <i class="fa-brands fa-google"></i><%= t ".google" %>
              <% end %>
            </li>
            <li>
              <%= link_to "#", class: "twitter" do %>
                <i class="fa-brands fa-twitter"></i><%= t ".twitter" %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</section>
